@page
@model FrontEnd.Pages.QPages.EditAnswerModel
@{
    ViewData["Title"] = "EditAnswer";
}

<h4>Edit Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Answers.ID" />
            <input type="hidden" asp-for="Answers.QuestionID" />
            <div class="form-group">
                <label asp-for="Answers.Description" class="control-label"></label>
                <input asp-for="Answers.Description" class="form-control" />
                <span asp-validation-for="Answers.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Answers.Rating" class="form-control" />
            <input type="hidden" asp-for="Answers.CreatedBy" class="form-control" />
            <input type="hidden" asp-for="Answers.CreatedDate" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewData["Message"] != null)
    {
        <p class="text-success">@ViewData["Message"]</p>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

